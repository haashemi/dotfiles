{
  "[css][html][json][jsonc][markdown][mdx]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript][javascriptreact][typescript][typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[nginx]": {
    "editor.defaultFormatter": "ahmadalli.vscode-nginx-conf"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "cSpell.enabled": true,
  "cSpell.language": "en,fa,fa-IR",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.fontFamily": "'FiraCode Nerd Font', 'Vazir Code', 'Noto Nerd Font', 'Segoe UI Emoji'",
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "trailing",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.smoothScrolling": true,
  "editor.unicodeHighlight.includeStrings": false,
  "eslint.format.enable": true,
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.fileNesting.enabled": true,
  "files.eol": "\n",
  "git.autofetch": true,
  "git.confirmSync": false,
  "github.copilot.enable": {
    "*": false,
    "markdown": false,
    "plaintext": false,
    "scminput": false
  },
  "go.alternateTools": {
    "customFormatter": "golangci-lint-v2"
  },
  "go.formatFlags": ["fmt", "--stdin"],
  "go.formatTool": "custom",
  "go.lintFlags": ["--config=${workspaceFolder}/.golangci.yml", "--path-mode=abs", "--fast-only"],
  "go.lintTool": "golangci-lint-v2",
  "go.toolsManagement.autoUpdate": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnPaste.enabled": true,
  "prettier.printWidth": 120,
  "redhat.telemetry.enabled": false,
  "security.workspace.trust.untrustedFiles": "open",
  "svelte.enable-ts-plugin": true,
  "telemetry.telemetryLevel": "off",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnPaste.enabled": true,
  "window.menuBarVisibility": "toggle",
  "window.titleBarStyle": "native",
  "workbench.activityBar.location": "top",
  "workbench.colorTheme": "One Dark Pro Mix",
  "workbench.iconTheme": "material-icon-theme"
}
