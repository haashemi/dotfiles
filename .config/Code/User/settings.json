{
  "[astro][svelte][typescript][javascript][typescriptreact][javascriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[css][html][json][jsonc][mdx]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "astro.content-intellisense": true,
  "astro.updateImportsOnFileMove.enabled": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.foldingMaximumRegions": 65000,
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.smoothScrolling": true,
  "editor.stickyScroll.enabled": true,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.unicodeHighlight.includeStrings": false,
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.wordWrap": "off",
  "eslint.codeActionsOnSave.mode": "all",
  "eslint.format.enable": true,
  "eslint.validate": [
    "astro", // Enable .astro
    "javascript",
    "javascriptreact",
    "typescript", // Enable .ts
    "typescriptreact", // Enable .tsx
    "svelte"
  ],
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.eol": "\n",
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/node_modules": true,
    "**/Thumbs.db": true
  },
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "always",
  "go.toolsManagement.autoUpdate": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "json.maxItemsComputed": 1000000,
  "prettier.printWidth": 128,
  "redhat.telemetry.enabled": false,
  "security.workspace.trust.untrustedFiles": "open",
  "svelte.enable-ts-plugin": true,
  "telemetry.telemetryLevel": "off",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "vsicons.dontShowNewVersionMessage": true,
  "window.customTitleBarVisibility": "auto",
  "window.menuBarVisibility": "toggle",
  "window.zoomLevel": 3,
  "workbench.activityBar.location": "top",
  "workbench.iconTheme": "vscode-icons"
}
