{
  "[astro][svelte][typescript][javascript][typescriptreact][javascriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[css][html][json][jsonc][mdx]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.foldingMaximumRegions": 65000,
  "editor.fontFamily": "'Droid Sans Mono', 'monospace', monospace, 'ZedMono Nerd Font Mono'",
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.smoothScrolling": true,
  "editor.stickyScroll.enabled": true,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.unicodeHighlight.includeStrings": false,
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.wordWrap": "off",
  "eslint.codeActionsOnSave.mode": "all",
  "eslint.format.enable": true,
  "eslint.validate": ["astro", "javascript", "javascriptreact", "typescript", "typescriptreact", "svelte"],
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.eol": "\n",
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/node_modules": true,
    "**/Thumbs.db": true
  },
  "git.autofetch": true,
  "go.toolsManagement.autoUpdate": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "json.maxItemsComputed": 1000000,
  "nix.enableLanguageServer": true,
  "nix.serverPath": "nixd",
  "nix.serverSettings": {
    "nixd": {
      "formatting": {
        "command": ["alejandra"]
      },
      "options": {
        "nixos": {
          "expr": "(builtins.getFlake \"~/code/nixos\").nixosConfigurations.<name>.options"
        }
      }
    }
  },
  "prettier.printWidth": 128,
  "redhat.telemetry.enabled": false,
  "svelte.enable-ts-plugin": true,
  "telemetry.telemetryLevel": "off",
  "window.customTitleBarVisibility": "auto",
  "window.menuBarVisibility": "toggle",
  "window.zoomLevel": 1.5,
  "workbench.activityBar.location": "top",
  "workbench.colorTheme": "Material Theme Darker High Contrast",
  "workbench.iconTheme": "vscode-icons"
}
